<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            min-height: 100vh;
            position: relative;
        }

        footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            background-color: black;
            color: whitesmoke;
        }
    </style>
</head>
<body>
    @{var admin = Session["admin"] as WebsiteQuanLySoLenLop.Models.Admin;
        var user = Session["User"] as WebsiteQuanLySoLenLop.Models.GiangVien;}
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            <img src="~/image/Logo.png" width="50" height="50" />
            @Html.ActionLink("Website quản lý sổ lên lớp", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @{ if (admin == null && user == null)
                        {
                            <li>@Html.ActionLink("Admin Login", "AdminLogin", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("User Login", "UserLogin", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        }

                        else if (admin != null)
                        {
                            <li>@Html.ActionLink("Đăng ký tài khoản", "GiangVienAdd", "Admins", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Quản lý tài khoản", "Index", "Admins", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Khoa", "Index", "Khoas", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Bộ môn", "Index", "BoMons", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Phòng", "Index", "Phongs", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Lớp", "Index", "Lops", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Môn học", "Index", "MonHocs", new { area = "" }, new { @class = "nav-link" })</li>
                            <li style="margin-left: auto;"><a style="color:ghostwhite" href="#" class="nav-link">Xin chào: @admin.Username</a></li>
                            <li>@Html.ActionLink("Đăng xuất", "Logout", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                        else if (user != null)
                        {
                            <li>@Html.ActionLink("Tạo sổ lên lớp", "SoLenLopCreate", "GiangViens", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Sổ lên lớp", "Index", "GiangViens", new { area = "" }, new { @class = "nav-link" })</li>
                            <li style="margin-left: auto;"><a style="color:ghostwhite" href="#" class="nav-link">Xin chào: @user.HoTenGVGD</a></li>
                            <li>@Html.ActionLink("Đăng xuất", "Logout", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                    }
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer class="col-xs-12 col-sm-12 col-md-12 text-center">
        <p>&copy; @DateTime.Now.Year - Website quản lý sổ lên lớp</p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
