@model IEnumerable<WebsiteQuanLySoLenLop.Models.MonHoc>

@{
    ViewBag.Title = "Index";
}
<h4>Danh sách môn học</h4>
<hr />

@using (Html.BeginForm())
{
    <p>
        Tên môn học: @Html.TextBox("SearchString")
        <input type="submit" value="Tìm" class="btn btn-primary" />
        <button type="button" class="btn btn-default">
            @Html.ActionLink("Create", "Create")
        </button>
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaMH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenMH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoTietLT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoTietTH)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaMH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenMH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoTietLT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoTietTH)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.MaMH }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.MaMH }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaMH })
            </td>
        </tr>
    }

</table>
