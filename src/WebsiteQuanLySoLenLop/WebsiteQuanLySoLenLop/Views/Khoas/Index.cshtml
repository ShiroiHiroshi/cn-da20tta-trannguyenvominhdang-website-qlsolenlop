@model IEnumerable<WebsiteQuanLySoLenLop.Models.Khoa>

@{
    ViewBag.Title = "Index";
}
<h4>Danh sách khoa</h4>
<hr />
@using (Html.BeginForm())
{
    <p>
        Tên khoa: @Html.TextBox("SearchString")
        <input type="submit" value="Tìm" class="btn btn-primary" />
        <button type="button" class="btn btn-default">
            @Html.ActionLink("Create", "Create")
        </button>
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaKhoa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenKhoa)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaKhoa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenKhoa)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaKhoa }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaKhoa }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaKhoa })
            </td>
        </tr>
    }

</table>
