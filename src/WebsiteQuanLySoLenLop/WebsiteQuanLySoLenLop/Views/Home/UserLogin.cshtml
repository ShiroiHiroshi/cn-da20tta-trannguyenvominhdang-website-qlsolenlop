@model WebsiteQuanLySoLenLop.Models.GiangVien

@{
    ViewBag.Title = "UserLogin";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <center>
                            <img src="~/image/generaluser.png" width="150" />
                            <h2>User Login</h2>
                            <hr />
                        </center>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.MaGVGD)
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.MaGVGD)
                                        @Html.ValidationMessageFor(model => model.MaGVGD, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Matkhau)
                                    <div class="col-md-10">
                                        @Html.PasswordFor(model => model.Matkhau)
                                        @Html.ValidationMessageFor(model => model.Matkhau, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Đăng nhập" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <h3>@ViewBag.LoginFail</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
